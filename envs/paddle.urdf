<?xml version="1.0" ?>

<robot name="paddle" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <link name="base_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.001 0.001 0.001"/>
            </geometry>
        </visual>
      <inertial>
      <mass value="0"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
    </link>

    <joint name="prism_base_to_inter1" type="prismatic">
        <axis xyz="1 0 0" />
        <limit effort="10.0" lower="-1" upper="1" velocity="3.5" />
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <parent link="base_link"/>
        <child link="inter_link1"/>
        <dynamics damping="1.0" friction="0.0001"/>
    </joint>

    <link name="inter_link1">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.001 0.001 0.001"/>
            </geometry>
        </visual>
    </link>

    <joint name="inter1_to_2" type="prismatic">
        <axis xyz="0 1 0" />
        <limit effort="1.0" lower="-1" upper="1" velocity="1.5" />
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <parent link="inter_link1"/>
        <child link="inter_link2"/>
        <dynamics damping="1.0" friction="0.0001"/>
    </joint>

    <link name="inter_link2">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.001 0.001 0.001"/>
            </geometry>
        </visual>
    </link>

    <joint name="revolute_inter2_to_paddle" type="revolute">
        <axis xyz="0 0 1" />
        <limit effort="100.0" lower="-3." upper="3." velocity="30.5" />
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <parent link="inter_link2"/>
        <child link="paddleLink"/>
    </joint>


  <link name="paddleLink">
    <contact>
      <lateral_friction value="0.9"/>
      <rolling_friction value="0.0"/>
      <contact_cfm value="0.0"/>
      <contact_erp value="1.0"/>
    </contact>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
       <mass value="1.0"/>
       <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
	 	<box size="0.6 0.1 0.1"/>
      </geometry>
    </collision>
  </link>
</robot>
